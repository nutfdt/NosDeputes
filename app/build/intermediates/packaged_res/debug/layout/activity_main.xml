<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#233D67"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="14sp"
        android:background="@drawable/background_header"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/logo_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:text="@string/app_name_home"
            android:textStyle="bold"
            android:textColor="#233D67"
            android:textSize="20sp"
            android:gravity="center" />

    </LinearLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14sp"
        android:queryHint="@string/rechercher"
        android:background="@drawable/border"/>

    <ListView
        android:background="@drawable/border"
        android:id="@+id/listViewMain"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginHorizontal="14sp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="14sp"
        android:layout_weight="1"
        tools:listitem="@layout/item_deputy" />

</LinearLayout>